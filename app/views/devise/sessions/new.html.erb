<section class="row sign-in">
  <header class="col-sm-4 col-sm-offset-2">
    <%= image_tag "twik-logo-horizontal-red.png", class: "img-responsive" %>
  </header>
  <div class="col-sm-4 finish-registration-form-wrapper">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="col-xs-12">
          <%= form_group_for f, :email, label: false do %>
            <%= f.email_field :email, class:"form-control", placeholder: "Email" %>
          <% end %>
          <%= form_group_for f, :password, label: false do %>
            <%= f.password_field :password, class:"form-control", placeholder: "Password" %>
          <% end %>
        </div>
        <div class="col-xs-7">
          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: 'remember_me' %>
            <%= render "devise/shared/links" %>
          <% end %>
        </div>
        <div class="col-xs-5">
          <%= f.submit "Log in", class: "btn btn-primary btn-small pull-right" %>
        </div>
      </div>
    <% end %>
  </div>
</section>
