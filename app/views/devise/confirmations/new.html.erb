<section id="passwords-new">
  <header class="container">
    <h1 class="title">Resend confirmation instructions</h1>
    <hr>
  </header>
  <section class="container-fluid">
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
      <%= f.hidden_field :invitation_token %>
      <%= form_group_for f, :email do %>
        <%= f.email_field :email, autofocus: true, class:"form-control", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
      <% end %>
      <%= f.submit "Resend confirmation instructions", class: "btn btn-primary" %>
    <% end %>
  </section>
  <footer>
    <%= render "devise/shared/links" %>
  </footer>
</section>
